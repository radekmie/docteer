{
  "plugins": [
    [
      "module-resolver",
      {
        "alias": {
          "@client": "./client",
          "@server": "./server",
          "@shared": "./shared",
          "@tests": "./tests",
          "@types": "./types"
        },
        "cwd": "babelrc"
      }
    ]
  ],
  "presets": [
    [
      "@babel/preset-env",
      {
        "exclude": ["@babel/plugin-transform-regenerator"],
        "shippedProposals": true
      }
    ],
    ["@babel/preset-flow"],
    ["@babel/preset-react"]
  ]
}
