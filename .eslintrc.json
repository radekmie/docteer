{
  "extends": [
    "plugin:flowtype/recommended",
    "vazco/prettier"
  ],
  "plugins": [
    "flowtype"
  ],
  "rules": {
    "flowtype/no-types-missing-file-annotation": "off",
    "flowtype/space-after-type-colon": "off",
    "prettier/prettier": [
      "error",
      {
        "bracketSpacing": false,
        "singleQuote": true
      }
    ]
  },
  "settings": {
    "react": {
      "pragma": "h"
    }
  }
}
