{
  "name": "docteer",
  "author": "Rados≈Çaw Miernik <radekmie@gmail.com>",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "build": "run-s -ln build:*",
    "build:client": "parcel build --detailed-report --no-cache --no-source-maps --out-dir dist/client client/index.html",
    "build:server": "parcel build --detailed-report --no-cache --no-source-maps --out-dir dist/server server/index.js --bundle-node-modules --no-minify --target=node",
    "build:static": "mkdir -p dist/public && cp -R client/public dist",
    "e2e": "jest --all --ci",
    "postbuild": "for file in dist/client/*.js ; do npx terser -cem -o $file -- $file ; done",
    "prebuild": "npm run reset:build",
    "reset": "run-s -ln reset:*",
    "reset:build": "rm -rf dist",
    "reset:db": "docker kill docteer-db || true",
    "reset:db-data": "docker volume rm docteer-db || true",
    "start": "run-p -ln start:*",
    "start:client": "parcel watch --no-cache --out-dir dist/client client/index.html",
    "start:db": "docker run --rm -p 27017:27017 --name docteer-db --volume docteer-db:/data/db mongo:4.0.1",
    "start:server": "parcel watch --no-cache --out-dir dist/server server/index.js --target=node",
    "start:static": "nodemon -w 'client/public/**' -x 'npm run build:static'",
    "start:ssr": "nodemon -C -w 'dist/**' -x 'node dist/server/index.js'",
    "test": "run-s -ln test:*",
    "test:flow": "flow",
    "test:lint": "eslint ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/**/*.js"
    ],
    "coverageDirectory": ".coverage",
    "coverageReporters": [
      "html",
      "text"
    ],
    "projects": [
      {
        "displayName": "e2e"
      }
    ],
    "testMatch": [
      "<rootDir>/**/*.test.js"
    ]
  },
  "dependencies": {
    "ajv": "6.5.4",
    "baobab": "2.5.2",
    "bcryptjs": "2.4.3",
    "body-parser": "1.18.3",
    "cheerio": "1.0.0-rc.2",
    "compression": "1.7.3",
    "connect": "3.6.6",
    "etag": "1.8.1",
    "fuzzysort": "1.1.4",
    "hash.js": "1.1.5",
    "history": "4.7.2",
    "jsonwebtoken": "8.3.0",
    "lodash": "4.17.11",
    "mongodb": "3.1.6",
    "preact": "8.3.1",
    "preact-render-to-string": "4.1.0",
    "serve-static": "1.13.2"
  },
  "devDependencies": {
    "@babel/core": "7.1.0",
    "@babel/plugin-proposal-class-properties": "7.1.0",
    "@babel/plugin-transform-flow-strip-types": "7.0.0",
    "@babel/plugin-transform-modules-commonjs": "7.1.0",
    "@babel/preset-flow": "7.0.0",
    "@babel/preset-react": "7.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.0",
    "babel-plugin-module-resolver": "3.1.1",
    "eslint": "5.6.0",
    "eslint-config-prettier": "3.1.0",
    "eslint-config-vazco": "4.0.0",
    "eslint-plugin-babel": "5.2.0",
    "eslint-plugin-flowtype": "2.50.1",
    "eslint-plugin-prettier": "2.6.2",
    "eslint-plugin-react": "7.11.1",
    "eslint-plugin-vazco": "1.0.0",
    "faker": "4.1.0",
    "flow-bin": "0.81.0",
    "flow-typed": "2.5.1",
    "generic-pool": "3.4.2",
    "husky": "1.0.0-rc.15",
    "jest": "23.6.0",
    "nodemon": "1.18.4",
    "npm-run-all": "4.1.3",
    "parcel": "1.10.0",
    "postcss-custom-properties": "8.0.5",
    "prettier": "1.14.3",
    "puppeteer-core": "1.8.0",
    "terser": "3.8.2"
  }
}
