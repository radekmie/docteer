{
  "name": "docteer",
  "author": "Rados≈Çaw Miernik <radekmie@gmail.com>",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "build": "run-s -lns build:*",
    "build:client": "parcel build --no-autoinstall --no-source-maps --target client client/index.html",
    "build:server": "parcel build --no-autoinstall --no-source-maps --target server server/index.ts --no-scope-hoist",
    "build:static": "mkdir -p dist/public && cp -R client/public dist",
    "e2e": "jest --ci .spec.ts",
    "postbuild": "for file in dist/client/*.js ; do npx terser -cem -o $file -- $file ; done",
    "prebuild": "npm run reset:build",
    "reset": "run-s -lns reset:*",
    "reset:build": "rm -rf dist",
    "reset:db": "docker kill docteer-db || true",
    "reset:db-data": "docker volume rm docteer-db || true",
    "start": "run-p -lns start:*",
    "start:client": "parcel watch --no-autoinstall --no-hmr --target client client/index.html",
    "start:db": "docker run --rm -p 27017:27017 --name docteer-db --volume docteer-db:/data/db mongo:4.4.0 --replSet rs0",
    "start:db-rs": "sleep 3 && docker exec docteer-db mongo --eval \"rs.initiate({_id: 'rs0', members: [{_id: 0, host: 'localhost:27017'}]})\"",
    "start:server": "parcel watch --no-autoinstall --no-hmr --target server server/index.ts",
    "start:static": "nodemon -w 'client/public/**' -x 'npm run build:static'",
    "start:ssr": "nodemon -C -w 'dist/**' -x 'node --inspect dist/server/index.js'",
    "test": "run-s -lns test:*",
    "test:lint": "eslint --ext ts,tsx .",
    "test:text": "prettier --check '**/*.{json,md,mdx,yml}'",
    "test:types": "tsc --build .",
    "test:unit": "jest --ci .test.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/**/*.ts"
    ],
    "coverageDirectory": ".coverage",
    "coverageReporters": [
      "html",
      "text"
    ],
    "projects": [
      {
        "displayName": "e2e",
        "testMatch": [
          "<rootDir>/**/*.spec.ts"
        ]
      },
      {
        "displayName": "unit",
        "testMatch": [
          "<rootDir>/**/*.test.ts"
        ]
      }
    ],
    "testMatch": [
      "<rootDir>/**/*.spec.ts",
      "<rootDir>/**/*.test.ts"
    ]
  },
  "targets": {
    "client": {
      "context": "browser",
      "distDir": "dist/client",
      "engines": {
        "browsers": ">= 1% and not IE 11 and not dead"
      }
    },
    "server": {
      "context": "node",
      "distDir": "dist/server",
      "engines": {
        "node": "14"
      },
      "includeNodeModules": true,
      "minify": false
    }
  },
  "dependencies": {
    "@babel/runtime": "7.11.2",
    "@types/bcryptjs": "2.4.2",
    "ajv": "6.12.3",
    "ajv-keywords": "3.5.2",
    "bcryptjs": "2.4.3",
    "cheerio": "1.0.0-rc.3",
    "etag": "1.8.1",
    "fastify": "3.2.1",
    "fastify-static": "3.2.0",
    "fuzzysort": "1.1.4",
    "hash.js": "1.1.7",
    "immer": "7.0.7",
    "jsonwebtoken": "8.5.1",
    "lodash": "4.17.20",
    "mongodb": "3.6.0",
    "preact": "10.4.7",
    "preact-render-to-string": "5.1.10"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "7.11.0",
    "@babel/preset-env": "7.11.0",
    "@babel/preset-react": "7.10.4",
    "@babel/preset-typescript": "7.10.4",
    "@types/ajv-keywords": "3.4.0",
    "@types/body-parser": "1.19.0",
    "@types/cheerio": "0.22.21",
    "@types/compression": "1.7.0",
    "@types/etag": "1.8.0",
    "@types/faker": "4.1.12",
    "@types/generic-pool": "3.1.9",
    "@types/jest": "26.0.10",
    "@types/jsonwebtoken": "8.5.0",
    "@types/lodash": "4.14.159",
    "@types/mongodb": "3.5.26",
    "@types/serve-static": "1.13.5",
    "autoprefixer": "9.8.6",
    "eslint-config-vazco": "6.1.0",
    "faker": "4.1.0",
    "generic-pool": "3.7.1",
    "husky": "4.2.5",
    "jest": "26.4.0",
    "nodemon": "2.0.4",
    "npm-run-all": "4.1.5",
    "parcel": "2.0.0-beta.1",
    "playwright": "1.3.0",
    "postcss-custom-properties": "9.1.1",
    "terser": "5.1.0",
    "typescript": "4.1.3"
  }
}
