{
  "name": "docteer",
  "author": "Rados≈Çaw Miernik <radekmie@gmail.com>",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "build": "run-s -lns build:*",
    "build:client": "parcel build --detailed-report --no-autoinstall --no-cache --no-source-maps --out-dir dist/client client/index.html",
    "build:server": "parcel build --detailed-report --no-autoinstall --no-cache --no-source-maps --out-dir dist/server server/index.js --bundle-node-modules --no-minify --target=node",
    "build:static": "mkdir -p dist/public && cp -R client/public dist",
    "e2e": "jest --ci .spec.js",
    "postbuild": "for file in dist/client/*.js ; do npx terser -cem -o $file -- $file ; done",
    "prebuild": "npm run reset:build",
    "reset": "run-s -lns reset:*",
    "reset:build": "rm -rf dist",
    "reset:db": "docker kill docteer-db || true",
    "reset:db-data": "docker volume rm docteer-db || true",
    "start": "run-p -lns start:*",
    "start:client": "parcel watch --no-autoinstall --no-cache --out-dir dist/client client/index.html",
    "start:db": "docker run --rm -p 27017:27017 --name docteer-db --volume docteer-db:/data/db mongo:4.0.10 --replSet rs0",
    "start:db-rs": "sleep 3 && docker exec docteer-db mongo --eval \"rs.initiate({_id: 'rs0', members: [{_id: 0, host: 'localhost:27017'}]})\"",
    "start:server": "parcel watch --no-autoinstall --no-cache --out-dir dist/server server/index.js --target=node",
    "start:static": "nodemon -w 'client/public/**' -x 'npm run build:static'",
    "start:ssr": "nodemon -C -w 'dist/**' -x 'node dist/server/index.js'",
    "test": "run-s -lns test:*",
    "test:flow": "flow",
    "test:lint": "eslint .",
    "test:unit": "jest --ci .test.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/**/*.js"
    ],
    "coverageDirectory": ".coverage",
    "coverageReporters": [
      "html",
      "text"
    ],
    "projects": [
      {
        "displayName": "e2e",
        "testMatch": [
          "<rootDir>/**/*.spec.js"
        ]
      },
      {
        "displayName": "unit",
        "testMatch": [
          "<rootDir>/**/*.test.js"
        ]
      }
    ],
    "testMatch": [
      "<rootDir>/**/*.spec.js",
      "<rootDir>/**/*.test.js"
    ]
  },
  "dependencies": {
    "ajv": "6.10.0",
    "ajv-keywords": "3.4.0",
    "bcryptjs": "2.4.3",
    "body-parser": "1.19.0",
    "cheerio": "1.0.0-rc.3",
    "compression": "1.7.4",
    "connect": "3.7.0",
    "etag": "1.8.1",
    "fuzzysort": "1.1.4",
    "hash.js": "1.1.7",
    "history": "4.9.0",
    "immer": "3.1.3",
    "jsonwebtoken": "8.5.1",
    "lodash": "4.17.11",
    "mongodb": "3.2.7",
    "preact": "10.0.0-beta.3",
    "preact-render-to-string": "5.0.4",
    "serve-static": "1.14.1"
  },
  "devDependencies": {
    "@babel/core": "7.4.5",
    "@babel/plugin-proposal-class-properties": "7.4.4",
    "@babel/preset-env": "7.4.5",
    "@babel/preset-flow": "7.0.0",
    "@babel/preset-react": "7.0.0",
    "autoprefixer": "9.6.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.2",
    "babel-plugin-module-resolver": "3.2.0",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.3.0",
    "eslint-config-vazco": "4.3.0",
    "eslint-plugin-babel": "5.3.0",
    "eslint-plugin-flowtype": "3.10.4",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-react": "7.14.2",
    "eslint-plugin-vazco": "1.0.0",
    "faker": "4.1.0",
    "flow-bin": "0.102.0",
    "flow-typed": "2.5.2",
    "generic-pool": "3.7.1",
    "husky": "2.7.0",
    "jest": "24.8.0",
    "nodemon": "1.19.1",
    "npm-run-all": "4.1.5",
    "parcel": "1.12.3",
    "parcel-plugin-inline-css": "file:packages/parcel-plugin-inline-css",
    "postcss-custom-properties": "9.0.1",
    "prettier": "1.18.2",
    "puppeteer-core": "1.18.1",
    "terser": "4.0.1"
  }
}
