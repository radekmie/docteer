{
  "name": "docteer",
  "author": "Rados≈Çaw Miernik <radekmie@gmail.com>",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "build": "run-s -lns build:*",
    "build:client": "parcel build --detailed-report --no-autoinstall --no-cache --no-source-maps --out-dir dist/client client/index.html",
    "build:server": "parcel build --detailed-report --no-autoinstall --no-cache --no-source-maps --out-dir dist/server server/index.js --bundle-node-modules --no-minify --target=node",
    "build:static": "mkdir -p dist/public && cp -R client/public dist",
    "e2e": "jest --ci .spec.js",
    "postbuild": "for file in dist/client/*.js ; do npx terser -cem -o $file -- $file ; done",
    "prebuild": "npm run reset:build",
    "reset": "run-s -lns reset:*",
    "reset:build": "rm -rf dist",
    "reset:db": "docker kill docteer-db || true",
    "reset:db-data": "docker volume rm docteer-db || true",
    "start": "run-p -lns start:*",
    "start:client": "parcel watch --no-autoinstall --no-cache --out-dir dist/client client/index.html",
    "start:db": "docker run --rm -p 27017:27017 --name docteer-db --volume docteer-db:/data/db mongo:4.0.1 --replSet rs0",
    "start:db-rs": "sleep 3 && docker exec docteer-db mongo --eval \"rs.initiate({_id: 'rs0', members: [{_id: 0, host: 'localhost:27017'}]})\"",
    "start:server": "parcel watch --no-autoinstall --no-cache --out-dir dist/server server/index.js --target=node",
    "start:static": "nodemon -w 'client/public/**' -x 'npm run build:static'",
    "start:ssr": "nodemon -C -w 'dist/**' -x 'node dist/server/index.js'",
    "test": "run-s -lns test:*",
    "test:flow": "flow",
    "test:lint": "eslint .",
    "test:unit": "jest --ci .test.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/**/*.js"
    ],
    "coverageDirectory": ".coverage",
    "coverageReporters": [
      "html",
      "text"
    ],
    "projects": [
      {
        "displayName": "e2e",
        "testMatch": [
          "<rootDir>/**/*.spec.js"
        ]
      },
      {
        "displayName": "unit",
        "testMatch": [
          "<rootDir>/**/*.test.js"
        ]
      }
    ],
    "testMatch": [
      "<rootDir>/**/*.spec.js",
      "<rootDir>/**/*.test.js"
    ]
  },
  "dependencies": {
    "ajv": "6.6.1",
    "bcryptjs": "2.4.3",
    "body-parser": "1.18.3",
    "cheerio": "1.0.0-rc.2",
    "compression": "1.7.3",
    "connect": "3.6.6",
    "etag": "1.8.1",
    "fuzzysort": "1.1.4",
    "hash.js": "1.1.7",
    "history": "4.7.2",
    "immer": "1.9.0",
    "jsonwebtoken": "8.4.0",
    "lodash": "4.17.11",
    "mongodb": "3.1.10",
    "parcel-plugin-inline-css": "file:packages/parcel-plugin-inline-css",
    "preact": "8.4.2",
    "preact-render-to-string": "4.1.0",
    "serve-static": "1.13.2"
  },
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@babel/plugin-proposal-class-properties": "7.2.1",
    "@babel/preset-env": "7.2.0",
    "@babel/preset-flow": "7.0.0",
    "@babel/preset-react": "7.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "babel-plugin-module-resolver": "3.1.1",
    "eslint": "5.10.0",
    "eslint-config-prettier": "3.3.0",
    "eslint-config-vazco": "4.1.0",
    "eslint-plugin-babel": "5.3.0",
    "eslint-plugin-flowtype": "3.2.0",
    "eslint-plugin-prettier": "3.0.0",
    "eslint-plugin-react": "7.11.1",
    "eslint-plugin-vazco": "1.0.0",
    "faker": "4.1.0",
    "flow-bin": "0.89.0",
    "flow-typed": "2.5.1",
    "generic-pool": "3.4.2",
    "husky": "1.2.1",
    "jest": "23.6.0",
    "nodemon": "1.18.9",
    "npm-run-all": "4.1.5",
    "parcel": "1.10.3",
    "postcss-custom-properties": "8.0.9",
    "prettier": "1.15.3",
    "puppeteer-core": "1.11.0",
    "terser": "3.11.0"
  }
}
